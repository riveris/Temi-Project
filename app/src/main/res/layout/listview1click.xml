<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="707dp"
        android:layout_height="110dp"
        android:layout_marginTop="222dp"
        android:layout_marginBottom="468dp"
        android:text="주문하시겠습니까?"
        android:textAlignment="center"
        android:textSize="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/yes1"
        android:layout_width="129dp"
        android:layout_height="88dp"
        android:layout_marginStart="189dp"
        android:layout_marginTop="594dp"
        android:layout_marginEnd="623dp"
        android:layout_marginBottom="118dp"
        android:onClick="yes1"
        android:text="네"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/no1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/no1"
        android:layout_width="129dp"
        android:layout_height="88dp"
        android:layout_marginTop="594dp"
        android:layout_marginEnd="190dp"
        android:layout_marginBottom="118dp"
        android:onClick="no1"
        android:text="아니오"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/yes1"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>